@model IEnumerable<WorkSchedule2.Models.Deal>

@{
    ViewData["Title"] = "Index";
}

<h2>Users deals</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DealType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayPerHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PayPerMonth)
            </th>
            <th>
                User First name
            </th>
            <th>
                User Last name
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DealType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayPerHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PayPerMonth)
            </td>
            <td>
                Jacek
            </td>
            <td>
                Kowalski
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
